<Window x:Class="LibraryManagementSystem.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="ReportWindow" Height="550" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Reports" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
            <!-- Button to Issue Book -->
            <Button Content="Check Out of Stock Books" Width="200" Height="50" Margin="10" Click="CheckStock"/>

            <Button Content="Track Book" Width="200" Height="50" Margin="10" Click="TrackBook"/>

            <!-- Button to Add Book -->
            <Button Content="Top Book of Month" Width="200" Height="50" Margin="10" Click="TopMonth"/>

            <!-- Button to Delete Book -->
            <Button Content="Top Book of Year" Width="200" Height="50" Margin="10" Click="TopYear"/>

            <Button Content="Menu" Width="200" Height="50" Margin="10" Click="Menu_Click"/>

            <Button Content="Back" Width="200" Height="50" Margin="10" Click="Back_Click"/>
            <!-- Button to Submit Book -->

        </StackPanel> 
    </Grid>
</Window>
