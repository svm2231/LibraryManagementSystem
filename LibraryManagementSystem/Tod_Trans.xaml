<Window x:Class="LibraryManagementSystem.Tod_Trans"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Tod_Trans" Height="650" Width="850">
    <Grid>
        <md:Card Margin="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="Today's Transaction" FontSize="24" HorizontalAlignment="Center" Margin="10" />

                <!-- Filtered Data -->
                <DataGrid Name="TodTransDataGrid" AutoGenerateColumns="True" Visibility="Collapsed" 
      HorizontalAlignment="Stretch" Margin="10" Height="200">
                </DataGrid>

                <!-- Button to Fetch Data -->
                <Button Content="Back" Click="Back_Click" HorizontalAlignment="Center" Margin="0,20,0,20" Width="145"/>

                <Button Content="Main Menu" Click="Menu_Click" HorizontalAlignment="Center" Margin="0,0,0,20" Width="145"/>

            </StackPanel>
        </md:Card>
    </Grid>
</Window>
