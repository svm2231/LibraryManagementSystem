<Window x:Class="LibraryManagementSystem.AddBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="AddBookWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Book Title" Margin="0,0,0,5"/>
            <TextBox x:Name="txtBookTitle" Margin="0,0,0,10"/>

            <TextBlock Text="Author" Margin="0,0,0,5"/>
            <TextBox x:Name="txtAuthor" Margin="0,0,0,10"/>

            <TextBlock Text="ISBN" Margin="0,0,0,5"/>
            <TextBox x:Name="txtISBN" Margin="0,0,0,10"/>

            <TextBlock Text="Publication Year" Margin="0,0,0,5"/>
            <TextBox x:Name="txtPublicationYear" Margin="0,0,0,10"/>

            <TextBlock Text="Genre" Margin="0,0,0,5"/>
            <TextBox x:Name="txtGenre" Margin="0,0,0,10"/>

            <TextBlock Text="Stock Quantity" Margin="0,0,0,5"/>
            <TextBox x:Name="txtStockQuantity" Margin="0,0,0,10"/>

            <Button Content="Add Book" Click="AddBook_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
