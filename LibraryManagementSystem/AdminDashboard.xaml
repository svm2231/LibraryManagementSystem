<Window x:Class="LibraryManagementSystem.AdminDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Admin Dashboard" Height="600" Width="800">
    <Grid>
        <md:Card Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Admin Dashboard" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
                <Button Content="Manage Books" Width="150" Margin="10" Click="ManageBooks_Click" />
                <Button Content="Manage Users" Width="150" Margin="10" Click="ManageUsers_Click"/>
                <Button Content="Transactions" Width="150" Margin="10" Click="ManageTransactions_Click"/>
                <Button Content="Logout" Width="150" Margin="10" Click="Logout_Click" />
            </StackPanel>
        </md:Card>
    </Grid>
</Window>
