<Window x:Class="LibraryManagementSystem.CheckBookStock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Check Stock" Height="795" Width="1000">
    <Grid>
        <md:Card Margin="20">
            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                <!-- Title -->
                <TextBlock Text="Out of Stock Books" FontSize="24" HorizontalAlignment="Center" Margin="10" />

                <!-- Filtered Data -->
                <DataGrid Name="OutOfStockBooksDataGrid" AutoGenerateColumns="True" Visibility="Collapsed" 
                      HorizontalAlignment="Stretch" Margin="10" Height="200">
                </DataGrid>

                <!-- Button to Fetch Data -->
                <Button Content="Back" Click="Back_Click" HorizontalAlignment="Center" Margin="0,20,0,20" Width="145"/>

                <Button Content="Main Menu" Click="Menu_Click" HorizontalAlignment="Center" Margin="0,0,0,20" Width="145"/>

            </StackPanel>
        </md:Card>
    </Grid>
</Window>
