<Window x:Class="LibraryManagementSystem.Transaction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="Transaction" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Transactions" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
            <!-- Button to Issue Book -->
            <Button Content="Today's Transaction" Width="200" Height="50" Margin="10" Click="Today_Click"/>

            <Button Content="Weeks'Transaction" Width="200" Height="50" Margin="10" Click="Week_Click"/>

            <Button Content="Customize Transaction" Width="200" Height="50" Margin="10" Click="Custom_Click"/>

            <Button Content="Member's Transaction" Width="200" Height="50" Margin="10" Click="MemTrans_Click"/>



            <Button Content="Main Menu" Width="200" Height="50" Margin="10" Click="Menu_Click"/>

        </StackPanel>
    </Grid>
</Window>
