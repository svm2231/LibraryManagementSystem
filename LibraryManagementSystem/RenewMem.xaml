<Window x:Class="LibraryManagementSystem.RenewMem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Membership Renewal" Height="400" Width="400">
    <Grid>
        <md:Card Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
                <TextBlock Text="Membership Renewal" FontSize="24" HorizontalAlignment="Center" Margin="10"/>

                <TextBlock Text="Member ID" HorizontalAlignment="Center"/>
                <TextBox Name="txtMemberID" Width="200" HorizontalAlignment="Center"/>

                <Button Content="Check" Click="CheckMemberDetails" HorizontalAlignment="Center" Margin="10"/>

                <TextBlock Text="Full Name:" HorizontalAlignment="Center"/>
                <TextBox Name="txtFullName" Width="200" HorizontalAlignment="Center" IsReadOnly="True"/>

                <TextBlock Text="Membership End:" HorizontalAlignment="Center"/>
                <TextBox Name="txtMembershipEnd" Width="200" HorizontalAlignment="Center" IsReadOnly="True"/>

                <Button Content="Renew Membership" Click="RenewMembership" HorizontalAlignment="Center" Margin="10"/>
            </StackPanel>
        </md:Card>
    </Grid>
</Window>
