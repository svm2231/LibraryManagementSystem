<Window x:Class="LibraryManagementSystem.ManageUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryManagementSystem"
        mc:Ignorable="d"
        Title="Manage User" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Manage User" FontSize="24" HorizontalAlignment="Center" Margin="10"/>
            <!-- Button to Issue Book -->
            <Button Content="Add Member" Width="200" Height="50" Margin="10" Click="AddMem_Click"/>

            <Button Content="Remove Member" Width="200" Height="50" Margin="10" Click="RemoveMem_Click"/>

            <Button Content="Renew Membership" Width="200" Height="50" Margin="10" Click="RenewMem_Click"/>
            
            <Button Content="Issued Books" Width="200" Height="50" Margin="10" Click="IssueCheck_Click"/>
            

     
            <Button Content="Main Menu" Width="200" Height="50" Margin="10" Click="Menu_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
