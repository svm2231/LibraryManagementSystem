<Window x:Class="LibraryManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Admin Login" Height="300" Width="400">

    <Grid>
        <md:Card Margin="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Library Management System" FontSize="24" HorizontalAlignment="Center" Margin="10"/>

                <!-- Username Field -->
                <TextBox Name="UsernameTextBox" Margin="10" Width="200" 
                         md:HintAssist.Hint="Username" />

                <!-- Password Field -->
                <PasswordBox Name="PasswordBox" Margin="10" Width="200" 
                             md:HintAssist.Hint="Password" />

                <!-- Login Button -->
                <Button Content="Login" Width="100" Margin="10" Click="LoginButton_Click" />
            </StackPanel>
        </md:Card>
    </Grid>
</Window>
